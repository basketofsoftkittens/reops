<?xml version="1.0" encoding="UTF-8"?>
<!-- <player> node -->
<player 
	width="768" height="600" 
	scaleMode="letterbox" isLive="false" autoPlay="true" updateInterval="250"
	hasCaptions="false">
	<!-- <playlist> node -->
	<playlist>
		<mediaElement>
			<!-- media url="rtmp://cp67126.edgefcs.net/ondemand/mediapm/strobe/content/test/SpaceAloneHD_sounas_640_500_short" / -->
			<media url="http://mediapm.edgesuite.net/strobe/content/test/AFaerysTale_sylviaApostol_640_500_short.flv" />
		</mediaElement>
	</playlist>
	
	<!-- <skin> node -->
	<skin path="assets/skins/Lunar.swf">
		<skinElement id="controlBar"
			elementClass="com.realeyes.osmfplayer.controls.ControlBar" 
			initMethod="initControlBarInstance" 
			scaleMode="none" 
			hAdjust="0" vAdjust="-90" 
			hAlign="center"
			vAlign="bottom"
			autoPosition="true"
			draggable="true" 
			autoHide="true" />
		<skinElement id="loadingIndicator"
			elementClass="com.realeyes.osmfplayer.controls.LoadingIndicator" 
			initMethod="initLoadingIndicatorInstance" 
			hAdjust="0" vAdjust="0"
			vAlign="center"
			autoPosition="true" />
	</skin>
</player>