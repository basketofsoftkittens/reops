<?xml version="1.0" encoding="UTF-8"?>
<player 
	width="640" height="480" 
	scaleMode="LETTERBOX" playbackType="STREAMING" 
	isLive="false" autoPlay="true" updateInterval="250">
	<playlist>
		<sequence> <!-- or parallel once we get layout going -->
			<mediaElement>
				<id>sample</id>
				<mimeType>video/x-flv</mimeType> <!-- video/x-flv, audio/mpeg, image/jpeg, image/gif, img/png etc. -->
				<deliveryType>progressive</deliveryType> <!-- progressive -->
				<media url="http://office.realeyes.com/osmf/vids/sample.flv"/>
			</mediaElement>
			<mediaElement>
				<id>dgpromo</id>
				<mimeType>video/x-flv</mimeType> <!-- video/x-flv, audio/mpeg, image/jpeg, image/gif, img/png etc. -->
				<deliveryType>streaming</deliveryType> <!-- progressive -->
				<media url="rtmp://office.realeyes.com/vod/seeker"/>
			</mediaElement>
			<mediaElement>
				<id>adobemax2007720p1500</id>
				<mimeType>video/x-flv</mimeType> <!-- video/x-flv, audio/mpeg, image/jpeg, image/gif, img/png etc. -->
				<deliveryType>streaming</deliveryType> <!-- progressive -->
				<media url="rtmp://office.realeyes.com/vod/AdobeMax2007_720p_1500"/>
			</mediaElement>
		</sequence>
	</playlist>
	<skin path="assets/skins/RE_Skin.swf">
		<skinElement id="controlBar"
			elementClass="com.realeyes.osmfplayer.controls.ControlBar" 
			initMethod="initControlBarInstance" 
			scaleMode="NONE" 
			hAdjust="0" vAdjust="0" 
			vAlign="BOTTOM"
			autoPosition="true"
			draggable="true" 
			autoHide="true" />
		<skinElement id="loadingIndicator"
			elementClass="com.realeyes.osmfplayer.controls.LoadingIndicator" 
			initMethod="initLoadingIndicatorInstance" 
			hAdjust="0" vAdjust="0"
			vAlign="CENTER"
			autoPosition="true" />
		<skinElement id="closedCaptionField"
			elementClass="com.realeyes.osmfplayer.controls.ClosedCaptionField" 
			initMethod="initClosedCaptionFieldInstance" 
			hAdjust="0" vAdjust="0" 
			hAlign="LEFT"
			vAlign="TOP"
			autoPosition="true" />
	</skin>
</player>